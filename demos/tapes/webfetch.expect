#!/usr/bin/expect -f
set timeout 60

proc type_slow {text {delay 40}} {
    foreach char [split $text ""] {
        send -- $char
        after $delay
    }
}

spawn asciinema rec --overwrite --window-size 80x24 -c pi recordings/webfetch.cast

expect "Sandbox"

type_slow "fetch https://bun.sh and tell me what Bun is"
send "\r"

sleep 25

send "\x03"
sleep 0.3
send "\x03"

expect eof
